version: '3'
services:
  back-end:
    build: ./server
    ports:
      - "1222:1222"
    depends_on:
      - redis-session-server
    environment:
      - REDIS_HOST=redis-session-server

  front-end:
    build: ./client
    ports:
      - "5173:5173"
    depends_on:
      - back-end

  redis-session-server:
    image: redis:alpine
    restart: unless-stopped
    volumes:
      - ./redis.conf:/usr/local/etc/redis/redis.conf

